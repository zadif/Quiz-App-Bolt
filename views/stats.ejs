<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Statistics</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/styles.css" />
    <script src="/dark-mode.js"></script>
  </head>
  <body>
    <!-- Dark mode initialization overlay -->
    <div id="dark-mode-init"></div>

    <div class="container stats-container mt-5">
      <h2 class="text-center mb-4">
        <i class="fas fa-chart-line me-2"></i>Your Quiz Statistics
      </h2>

      <div class="row g-4">
        <div class="col-md-4">
          <div class="card stat-card h-100">
            <div class="card-body text-center">
              <i class="fas fa-tasks mb-3 fa-2x text-primary"></i>
              <h3 class="card-title">Total Quizzes</h3>
              <p class="stat-number" id="totalQuizzes">0</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card stat-card h-100">
            <div class="card-body text-center">
              <i class="fas fa-percentage mb-3 fa-2x text-primary"></i>
              <h3 class="card-title">Average Score</h3>
              <p class="stat-number" id="averageScore">0%</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card stat-card h-100">
            <div class="card-body text-center">
              <i class="fas fa-trophy mb-3 fa-2x text-primary"></i>
              <h3 class="card-title">Best Score</h3>
              <p class="stat-number" id="bestScore">0%</p>
            </div>
          </div>
        </div>
      </div>

      <div class="progress-history mt-5">
        <h3 class="mb-4"><i class="fas fa-history me-2"></i>Recent Progress</h3>
        <div id="progressHistory" class="list-group">
          <!-- Progress history will be inserted here -->
        </div>
      </div>

      <div class="text-center mt-4">
        <a href="/" class="btn btn-primary me-md-2 mb-2 mb-md-0">
          <i class="fas fa-home me-2"></i>Back to Home
        </a>
        <button class="btn btn-danger" onclick="confirmResetStats()">
          <i class="fas fa-trash me-2"></i>Reset Statistics
        </button>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/stats.js"></script>
  </body>
</html>
